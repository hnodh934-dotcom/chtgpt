# ====================================
# RegTech Compliance Platform
# Environment Variables Configuration
# ====================================
# Copy this file to .env and fill in your values

# ====================================
# Application Settings
# ====================================
NODE_ENV=production
PORT=3000
VITE_APP_ID=regtech-compliance-platform

# ====================================
# Database Configuration (MySQL/TiDB)
# ====================================
# Format: mysql://username:password@host:port/database
DATABASE_URL=mysql://user:password@localhost:3306/regtech_db

# ====================================
# Authentication & Security
# ====================================
# JWT Secret for cookie signing (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# OAuth Server URL (for user authentication)
OAUTH_SERVER_URL=https://your-oauth-server.com

# Owner OpenID (admin user identifier)
OWNER_OPEN_ID=your-owner-open-id

# ====================================
# AI/LLM Integration (Optional)
# ====================================
# For RegAdvisor, RegDrafter, RaaC features
BUILT_IN_FORGE_API_URL=https://api.openai.com/v1
BUILT_IN_FORGE_API_KEY=sk-your-api-key

# ====================================
# AWS S3 (Optional - for file storage)
# ====================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=me-south-1
AWS_S3_BUCKET=regtech-files

# ====================================
# Redis (Optional - for caching)
# ====================================
REDIS_URL=redis://localhost:6379

# ====================================
# Email (Optional - for notifications)
# ====================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-password

# ====================================
# Frontend URL (for CORS)
# ====================================
FRONTEND_URL=https://yourdomain.com
